  <tool name="Mortgage Calculator" id="1">
    <div class="toolsTitle">Mortgage Calculator</div>

      <div class="smallContainer">
        <label class="control-label">Home Price:</label>
        <input type="number" id="price" class="form-control" step="1000"></input>
      </div>
      <div class="smallContainer">
        <label class="control-label">Down Payment:</label>
        <input type="number" id="downPayment" class="form-control" step="1000"></input>
      </div>  
      <div class="smallContainer">
        <label class="control-label">Interest Rate:</label>
        <input type="number" id="interestRate" class="form-control" step="1000"></input>
      </div>
      <div class="smallContainer">
        <label class="control-label">Mortgage Length:</label>
        <input type="number" id="mortgageLength" class="form-control" step="1000"></input>
      </div>
      <div class="smallContainer">
        <label class="control-label">Payment Frequency:</label>
        <!--<div class="btn-group">
          <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
            Monthly <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" id="payFrequency">
            <li><a href="#">Monthly</a></li>
            <li><a href="#">Biweekly</a></li>
            <li><a href="#">Weekly</a></li>
